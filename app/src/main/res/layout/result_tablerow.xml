<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <View
        android:layout_width="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_height="2dp"
        android:background="@color/light_grey"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewGameID"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLocation"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/gameinfo_drawdisplay_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text=" - "
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/gameinfo_drawdisplay_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTime"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/gameinfo_drawdisplay_text_size"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/textViewRef"
            android:textSize="@dimen/text_size_ref"
            android:textColor="@color/dark_blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAssRef1"
            android:textSize="@dimen/text_size_ref"
            android:textColor="@color/dark_blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAssRef2"
            android:textSize="@dimen/text_size_ref"
            android:textColor="@color/dark_blue"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHomeName"
            android:layout_weight="4"
            android:textSize="@dimen/teamnamescore_drawdisplay_text_size"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHomeScore"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="@dimen/teamnamescore_drawdisplay_text_size"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAwayName"
            android:layout_weight="4"
            android:textSize="@dimen/teamnamescore_drawdisplay_text_size"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAwayScore"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="@dimen/teamnamescore_drawdisplay_text_size"/>
    </TableRow>

</LinearLayout>

